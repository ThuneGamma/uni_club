<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.feng.dao.UserMapper">

    <!-- 开启二级缓存 -->
    <!--<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>-->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.feng.entity.User">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="sex" property="sex" />
        <result column="institute" property="institute" />
        <result column="account" property="account" />
        <result column="password" property="password" />
        <result column="create_time" property="createTime" />
        <result column="is_active" property="isActive" />
        <result column="last_login_time" property="lastLoginTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, sex, institute, account, password, create_time, is_active, last_login_time
    </sql>

    <!-- 新增：getOneByAccount 方法的SQL映射（账号查重核心） -->
    <select id="getOneByAccount" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" /> <!-- 复用通用列名，避免重复书写 -->
        FROM
        user
        WHERE
        account = #{account} <!-- 匹配传入的账号参数 -->
        LIMIT 1 <!-- 只查一条，提高查询效率 -->
    </select>

    <!-- 新增：更新最后登录时间 -->
    <update id="updateLastLoginTime" parameterType="java.util.Map">
        UPDATE user
        SET last_login_time = #{lastLoginTime}
        WHERE id = #{userId}
    </update>

</mapper>
